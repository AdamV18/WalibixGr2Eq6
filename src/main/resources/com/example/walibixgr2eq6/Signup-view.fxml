<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.walibixgr2eq6.Controller.SignupController"
            style="-fx-background-color: #f9f9f9;">

    <!-- TOP: -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="15" left="15" right="15" bottom="15" />
            </padding>
            <ImageView fitHeight="90" fitWidth="90">
                <image>
                    <Image url="@images/logo.png" preserveRatio="true" />
                </image>
            </ImageView>
        </HBox>
    </top>

    <!-- CENTER: -->
    <center>
        <VBox alignment="CENTER" spacing="12">
            <Label text="Créer un compte" style="-fx-font-size: 18px;" />
            <TextField fx:id="nomField" promptText="Nom" maxWidth="250" />
            <TextField fx:id="prenomField" promptText="Prénom" maxWidth="250" />
            <TextField fx:id="emailField" promptText="Email" maxWidth="250" />
            <PasswordField fx:id="passwordField" promptText="Mot de passe" maxWidth="250" />
            <Button text="Créer le compte" onAction="#onSignupButtonClick" />
            <Label fx:id="signupMessageLabel" textFill="green" />
        </VBox>
    </center>
</BorderPane>
