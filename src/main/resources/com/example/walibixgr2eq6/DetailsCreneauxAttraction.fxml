<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

   <!-- Header avec logo à gauche et titre centré -->
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="105.0" prefWidth="600.0" spacing="10.0">
         <!-- Logo dans le coin gauche -->
         <ImageView fitHeight="101.0" fitWidth="155.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../../images/logo_walibix.png" />
            </image>
         </ImageView>

         <!-- Espace flexible avant le titre -->
         <Region HBox.hgrow="ALWAYS" />

         <!-- Titre centré -->
         <Label text="Pulsar" style="-fx-font-size: 40px;" />

         <!-- Espace flexible après le titre -->
         <Region HBox.hgrow="ALWAYS" />
      </HBox>
   </top>

   <center>
      <HBox alignment="CENTER">
         <VBox alignment="CENTER" spacing="20.0" translateX="-100.0" translateY="-20.0">
            <!-- Type -->
            <Label style="-fx-font-size: 24px;" text="Water Coaster" />

            <!-- Description -->
            <Text style="-fx-font-size: 24px;" text="Un splash gigantesque propulsé en avant et en arrière sur l’eau." textAlignment="CENTER" wrappingWidth="400.0" />

            <!-- Prix -->
            <Label style="-fx-font-size: 22px;" text="Prix : 32 €" />

            <!-- Choix du créneau -->
            <Label style="-fx-font-size: 20px;" text="Choisissez votre créneau :" />
            <ComboBox prefWidth="150.0">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <String fx:value="10h00 - 10h30" />
                     <String fx:value="10h30 - 11h00" />
                     <String fx:value="11h00 - 11h30" />
                     <String fx:value="11h30 - 12h00" />
                     <String fx:value="12h00 - 12h30" />
                     <String fx:value="12h30 - 13h00" />
                     <String fx:value="13h00 - 13h30" />
                     <String fx:value="13h30 - 14h00" />
                     <String fx:value="14h00 - 14h30" />
                     <String fx:value="14h30 - 15h00" />
                     <String fx:value="15h00 - 15h30" />
                     <String fx:value="15h30 - 16h00" />
                     <String fx:value="16h00 - 16h30" />
                     <String fx:value="16h30 - 17h00" />
                     <String fx:value="17h00 - 17h30" />
                     <String fx:value="17h30 - 18h00" />
                     <String fx:value="18h00 - 18h30" />
                     <String fx:value="18h30 - 19h00" />
                  </FXCollections>
               </items>
            </ComboBox>

            <!-- Boutons -->
            <HBox alignment="CENTER" spacing="10.0">
               <Button text="Valider" />
            </HBox>
         </VBox>
      </HBox>
   </center>

   <!-- Image sur la gauche -->
   <left>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="9.0" prefWidth="200.0" />
            <HBox prefHeight="7.0" prefWidth="200.0" />
            <VBox prefHeight="200.0" prefWidth="100.0" translateX="10.0" translateY="30.0">
               <children>
                  <!-- Image du Pulsar -->
                  <ImageView fitHeight="400.0" fitWidth="450.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/pulsar.jpg" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
         </children>
      </VBox>
   </left>

   <!-- Bas de page -->
   <bottom>
      <HBox prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="200.0" prefWidth="16.0" />
            <Button text="Retour" />
         </children>
      </HBox>
   </bottom>

</BorderPane>
