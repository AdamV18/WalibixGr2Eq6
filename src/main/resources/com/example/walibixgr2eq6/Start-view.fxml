<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.walibixgr2eq6.Controller.StartController"
            style="-fx-background-color: #f9f9f9;">

    <!-- TOP: -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" left="10" right="10" bottom="10" />
            </padding>
            <ImageView fitHeight="90" fitWidth="90">
                <image>
                    <Image url="@images/logo.png" preserveRatio="true" />
                </image>
            </ImageView>
        </HBox>
    </top>

    <!-- CENTER: -->
    <center>
        <VBox spacing="20" alignment="CENTER">
            <Label text="Bienvenue sur l'application WALIBIX"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;" />
            <Label text="Choisissez une option pour commencer :"
                   style="-fx-font-size: 14px;" />
            <Button fx:id="loginButton" text="Se connecter" onAction="#onLoginClick" minWidth="200" />
            <Button text="S'inscrire" onAction="#onSignupClick" minWidth="200" />
            <Button text="Continuer en tant qu'invitÃ©" onAction="#onGuestClick" minWidth="200" />
        </VBox>
    </center>
</BorderPane>
