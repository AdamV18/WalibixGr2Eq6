<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.walibixgr2eq6.Controller.AdminController"
            style="-fx-background-color: #f9f9f9;">

    <!-- TOP: -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" left="10" right="10" bottom="10" />
            </padding>
            <ImageView fitHeight="90" fitWidth="90">
                <image>
                    <Image url="@images/logo.png" />
                </image>
            </ImageView>
        </HBox>
    </top>

    <!-- CENTER: -->
    <center>
        <VBox spacing="25" alignment="CENTER">
            <Label text="Espace Administrateur" style="-fx-font-size: 18px;" />

            <VBox spacing="10" alignment="CENTER">
                <Button text="Gérer les attractions" onAction="#onManageAttractions" minWidth="250" />
                <Button text="Gérer les réductions" onAction="#onManageReductions" minWidth="250" />
                <Button text="Voir les clients" onAction="#onViewClients" minWidth="250" />
                <Button text="Voir les statistiques" onAction="#onViewStatistics" minWidth="250" />
            </VBox>

        </VBox>
    </center>
</BorderPane>